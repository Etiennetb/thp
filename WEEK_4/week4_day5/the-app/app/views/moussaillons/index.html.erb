<h1>Moussaillons</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moussaillons.each do |moussaillon| %>
      <tr>
        <td><%= moussaillon.username %></td>
        <td><%= moussaillon.email %></td>
        <td><%= moussaillon.bio %></td>
        <td><%= link_to 'Show', moussaillon %></td>
        <td><%= link_to 'Edit', edit_moussaillon_path(moussaillon) %></td>
        <td><%= link_to 'Destroy', moussaillon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

