
<h1>Liste des articles</h1>
<%= link_to 'Mon blog', controller: 'articles' %>


<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Voir article', article_path(article) %></td>
      <td><%= link_to 'Editer article ', edit_article_path(article) %></td>
       <td><%= link_to 'Supprimer article', article_path(article),
              method: :delete,
              data: { confirm: 'Etes vous certain?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Ecrire un nouvel potin', new_article_path %>